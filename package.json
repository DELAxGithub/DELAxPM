{
  "name": "delaxpm-monorepo",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "build:unified": "turbo build --filter=@delaxpm/unified",
    "dev": "turbo dev",
    "dev:unified": "turbo dev --filter=@delaxpm/unified",
    "dev:all": "concurrently -n \"unified,platto,liberary\" -c \"green,yellow,blue\" \"pnpm dev:unified\" \"echo 'Platto: 既存システム（必要時に手動起動）'\" \"echo 'Liberary: 既存システム（必要時に手動起動）'\"",
    "status": "node scripts/check-status.js",
    "compare": "open http://localhost:3000/admin",
    "feature:toggle": "node scripts/toggle-feature.js",
    "lint": "turbo lint",
    "clean": "turbo clean",
    "test": "turbo test",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report",
    "type-check": "turbo type-check",
    "deploy:check": "pnpm build:unified && echo 'Build successful - ready for deployment'",
    "db:migrate": "cd supabase && supabase db push",
    "db:reset": "cd supabase && supabase db reset",
    "db:seed": "cd supabase && supabase db seed",
    "db:status": "cd supabase && supabase status",
    "db:diff": "cd supabase && supabase db diff",
    "db:start": "cd supabase && supabase start",
    "db:stop": "cd supabase && supabase stop",
    "db:setup": "pnpm db:start && pnpm db:migrate && echo '✅ Database setup complete!'",
    "db:validate": "node scripts/validate-migration.js",
    "db:migrate:safe": "pnpm db:migrate && pnpm db:validate",
    "dev:with-db": "concurrently -n \"supabase,dev\" -c \"cyan,green\" \"pnpm db:start\" \"pnpm dev:unified\"",
    "claude:commit": "node scripts/auto-commit.js",
    "claude:hooks": "node scripts/claude-hooks.js",
    "claude:deploy": "gh workflow run deploy.yml",
    "claude:test": "gh workflow run test.yml",
    "claude:auto": "pnpm claude:hooks && pnpm claude:commit",
    "claude:full": "pnpm claude:hooks && pnpm claude:commit && pnpm claude:deploy",
    "claude:check": "pnpm type-check && pnpm lint && pnpm build:unified && echo '✅ All checks passed'",
    "deploy:prod": "pnpm claude:check && gh workflow run deploy.yml && echo '🚀 Production deployment triggered'",
    "deploy:auto": "pnpm claude:auto && echo '🤖 Auto-deployment pipeline started'"
  },
  "devDependencies": {
    "turbo": "^2.3.1"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0",
  "dependencies": {
    "@supabase/supabase-js": "^2.52.0",
    "chalk": "^5.4.1",
    "concurrently": "^9.2.0",
    "dotenv": "^17.2.1"
  }
}
